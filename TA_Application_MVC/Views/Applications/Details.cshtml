@model TA_Application_MVC.Models.Application

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h4>Application</h4>

<form>
    <div id="IDInformation" class="form-row">
        <div class="form-group col-md-6">
            <label for="InputName">First Name</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.LastName) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputName">Last Name</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.FirstMidName) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputNumber">Phone Number</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.PhoneNumber) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputNumber">Address</label>
            <dd class="col-6"> @Html.DisplayFor(model => model.Address)</dd>
        </div>
        <div class="form-group col-md-6">
            <label for="InputStudentID">Student ID</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.StudentuID) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputSemester">Semester Completed</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.SemestersCompleted) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputDegree">Degree</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.Degree) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputMajor">Major</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.Major) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputName">Semester Completed</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.GPA) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputName">Requested Hours</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.RequestedHours) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputName">LinkedIn</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.LinkedInURL) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputName">Creation Date</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.CreationDate) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="InputName">Modfication Date</label>
            <input type="text" placeholder=@Html.DisplayFor(model => model.ModificationDate) class="form-control-plaintext" id="InputName" readonly>
        </div>
        <div class="form-group col-md-12">
            <label for="InputName">Person Statement</label>
            <dd class="col-6"> @Html.DisplayFor(model => model.PersonalStatement)</dd>
        </div>
    </div>
</form>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.ID">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>

