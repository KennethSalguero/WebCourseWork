@{
    ViewData["Title"] = "Home Page";
}


<!--Welcome Screen with link to complete application-->
<div id="WelcomeScreen" class="position-relative overflow-hidden p-3 p-md-5 m-md-2 text-center bg-light">
    <div class="col-md-12 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Become a Teacher's Assistant</h1>
        <p class="lead font-weight-normal">As a TA you will earn college credits while getting paid, join our team.</p>
        <a class="btn btn-danger btn-lg" href="~/Applications/Create" role="button">Apply Today »</a>
    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>


<!--Gallery of photos with captions about TAing-->
<div id="TAInformation" class="bd-example">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" " alt="The University of Utah Campus" src="/Images/UofUCampus.jpg" data-holder-rendered="true">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Your new Workplace</h5>
                    <p>As a TA you will work on Campus.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" " alt="Students studying in a group" src="/Images/Tutoring1.jpg" data-holder-rendered="true">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Help your classmates.</h5>
                    <p>With your experience you will help other students learn.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" " alt="Graduation caps thrown in the air" src="/Images/Tutoring2.jpg" data-holder-rendered="true">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Graduate Faster</h5>
                    <p>TAs earn college credits while they work.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
